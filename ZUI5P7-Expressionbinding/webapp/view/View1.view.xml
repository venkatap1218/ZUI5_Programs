<mvc:View controllerName="com.expressionZUI5Expressionbindingp7.controller.View1" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content>
					<!-- Vertical Box (VBox) to arrange child controls vertically -->
					<VBox>
						<!-- Text control displaying dynamically calculated price with currency -->
						<Text text="{= ${/product/price} - (${/product/price} * ${/product/discount}) + ' ' + ${/product/currency} }"/>
					</VBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>